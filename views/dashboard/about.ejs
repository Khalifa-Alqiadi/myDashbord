<%- include('../includes/head.ejs') %>
<%- include('../includes/nav.ejs') %>

    <h1 class="text-center mt-3"><%= title%></h1>
    <div class="container">
        <div class="row">
            <div class="card-header my-3">
                <button class="btn btn-primary" data-bs-toggle="modal"
                data-bs-target="#editModal">Edid</button>
            </div>
            <div class="col-sm-3">
                <img src="/images/<%= abouts.image %>" alt="" class="rounded img-fluid img-thumbnail">
                <h3 class="my-2"><%= abouts.title%></h3>
            </div>
            <div class="col-sm-7 card">
                <h1 class="m-2"><%= abouts.description1 %></h1>
                <p class="ms-4"><%= abouts.description2 %></p>
                <div class="card body border-0">
                    <ul class="mt-2">
                        <li class="p-3 border mt-1 bg-light">Title: <%= abouts.title%></li>
                        <li class="p-3 mt-1">First Name: <%= abouts.firstname %></li>
                        <li class="p-3 border mt-1 bg-light">Last Name: <%= abouts.lastname %></li>
                        <li class="p-3 mt-1">CV: <a href="<%= abouts.cv %>">CV</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Edit Project</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/dashboard/update_about" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="<%= abouts._id %>">
                        <div class="mb-3 row">
                            <label for="firstname" class="col-sm-3 col-form-label">First Name</label>
                            <div class="col-sm-9">
                                <input type="text" name="firstname" class="form-control" id="firstname"
                                    placeholder="Enter First Name" required
                                    value="<%= abouts.firstname %>">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="lastname" class="col-sm-3 col-form-label">Last Name</label>
                            <div class="col-sm-9">
                                <input type="text" name="lastname" class="form-control" id="lastname"
                                    placeholder="Enter Last Name" required
                                    value="<%= abouts.lastname %>">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="title" class="col-sm-3 col-form-label">Title</label>
                            <div class="col-sm-9">
                                <input type="text" name="title" class="form-control" id="title"
                                    placeholder="Enter title" required
                                    value="<%= abouts.title %>">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="description1" class="col-sm-3 col-form-label">Description 1</label>
                            <div class="col-sm-9">
                                <input type="text" name="description1" class="form-control" id="description1"
                                    placeholder="Enter Description Name" required
                                    value="<%= abouts.description1 %>">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="desc" class="col-sm-3 col-form-label">Description 2</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="description2" id="desc"
                                    placeholder="Enter Description"
                                    value="<%= abouts.description2 %>">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="image" class="col-sm-3 col-form-label">Image</label>
                            <div class="col-sm-9">
                                <input type="file" class="form-control" name="image" id="image" 
                                    required value="<%= abouts.image %>">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="cv" class="col-sm-3 col-form-label">CV</label>
                            <div class="col-sm-9">
                                <input type="file" class="form-control" name="cv" id="cv" 
                                    required value="<%= abouts.cv %>">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary"
                                data-bs-dismiss="modal">Close</button>
                            <input type="submit" value="Update" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


<%- include('../includes/footer.ejs') %>